<div class="login-page">
  <div class="login-page__wrapper">
    <h1 class="login-page__title">Вход</h1>
    <div class="login-page__input-wrapper">
      {{> component/input label="Логин" type="text" placeholder="Логин" name="login"}}
      {{> component/input label="Пароль" type="password" placeholder="Пароль" name="password" errorText="Неверный пароль"}}
    </div>
    <div class="login-page__button-wrapper">
      {{> component/button text="Войти"}}
      <a class="login-page__link" href="/">Ещё не зарегистрированы?</a>
    </div>
  </div>
</div>
