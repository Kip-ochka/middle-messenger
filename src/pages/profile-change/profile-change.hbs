<div class="profile-change__wrapper">
  {{> component/backButton}}
  <div class="profile-change">
    <div class="profile-change__img-wrapper">
      <img class="profile-change__img" src="../../../assets/jpg/avatar.jpg" alt="Аватар пользователя">
    </div>
    <ul class="profile-change__fields">
      <li class="profile-change__field">
        {{> component/settingInput type='text' label='Почта' value='email@email.com' id='email'}}
      </li>
      <li class="profile-change__field">
        {{> component/settingInput type='text' label='Логин' value='Vanya777xXx' id='login'}}
      </li>
      <li class="profile-change__field">
        {{> component/settingInput type='text' label='Имя' value='Ваня' id='first_name'}}
      </li>
      <li class="profile-change__field">
        {{> component/settingInput type='text' label='Фамилия' value='Ванин' id='second_name'}}
      </li>
      <li class="profile-change__field">
        {{> component/settingInput type='text' label='Имя в чате' value='SuperVanyaOver9000' id='display_name'}}
      </li>
      <li class="profile-change__field">
        {{> component/settingInput type='text' label='Телефон' value='+7(900)000-00-00' id='phone'}}
      </li>
    </ul>
    <div class="profile-change__button-wrapper">
      {{> component/button type="submit" text="Сохранить"}}
    </div>
  </div>
</div>
