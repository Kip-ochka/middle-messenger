<div class="register-page">
  <div class="register-page__wrapper">
    <h1 class="register-page__title">Регистрация</h1>
    <div class="register-page__input-wrapper">
      {{> component/input label="Почта" type="email" placeholder="Почта" errorText="Неверная почта" name="email"}}
      {{> component/input label="Логин" type="text" placeholder="Логин" name="login"}}
      {{> component/input label="Имя" type="text" placeholder="Имя" name="first_name"}}
      {{> component/input label="Фамилия" type="text" placeholder="Фамилия" name="second_name"}}
      {{> component/input label="Телефон" type="text" placeholder="Телефон" name="phone"}}
      {{> component/input label="Пароль" type="password" placeholder="Пароль" name="password"}}
      {{> component/input label="Пароль (ещё раз)" type="password" placeholder="Пароль (ещё раз)" name="password"}}
    </div>
    <div class="register-page__button-wrapper">
      {{> component/button text="Зарегистрироваться"}}
      <a class="register-page__link" href="../login/login.hbs">Войти</a>
    </div>
  </div>
</div>
